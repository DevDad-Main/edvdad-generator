# Server Configuration
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000

# Express Utils Configuration
SERVICE_NAME={{projectName}}
NODE_ENV=development

{{#if (eq database "mongodb")}}
# MongoDB Configuration (with Express Utils connection management)
MONGO_URI=mongodb://localhost:27017/{{projectName}}
DB_MAX_RETRIES=10
DB_RETRY_INTERVAL=3000
{{else}}
# Database Configuration
DATABASE_URL={{#if (eq database "postgresql")}}postgresql://username:password@localhost:5432/{{projectName}}?schema=public{{/if}}{{#if (eq database "mysql")}}mysql://username:password@localhost:3306/{{projectName}}{{/if}}{{#if (eq database "sqlite")}}file:./dev.db{{/if}}
{{/if}}

{{#if features.redis}}
# Redis Configuration
REDIS_URL=redis://localhost:6379
{{/if}}

{{#if features.jwt}}
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
{{/if}}

{{#if features.cors}}
# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
{{/if}}

{{#if (or features.otp features.passwordReset)}}
{{#if (eq emailService "mailtrap")}}
# Mailtrap Configuration (Development)
MAILTRAP_API_KEY=your-mailtrap-api-key
{{/if}}

{{#if (eq emailService "resend")}}
# Resend Configuration (Production)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com
{{/if}}

{{#if (eq emailService "nodemailer")}}
# Nodemailer SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourdomain.com
{{/if}}
{{/if}}

{{#if features.logging}}
# Logging Configuration
LOG_LEVEL=info
{{/if}}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100